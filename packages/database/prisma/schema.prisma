generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int      @id @default(autoincrement())
  name     String
  eid      String
  salary   Decimal  @db.Decimal(10, 2)
  birth    DateTime @db.Date
  ssn      String
  address  String
  email    String
  nickname String?
  role     String
  Password String
}
